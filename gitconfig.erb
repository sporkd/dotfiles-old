[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[apply]
  whitespace = nowarn
[format]
  pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s
[alias]
  st = status
  co = checkout
  br = branch -a
  dic = diff --cached
  changes = diff --name-status -r
  diffstat = diff --stat -r
  plre = pull --rebase
  out = log origin..HEAD
  qpl = log --pretty=\"%Cblue%h%Creset %Cgreen[%cr]%Creset %s\" origin/production..origin/master
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  uncommit = reset --soft HEAD^
  unstage = reset HEAD
  undo = reset --hard
  cleanreset = !git reset --hard && git clean -f
  top = rev-parse --show-cdup
  authors = git shortlog -n -s --no-merges
