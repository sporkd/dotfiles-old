# Aliases

# cd
alias ..='cd ..'
alias gt='cd $(git top)' # cd to the repo root dir

# rm
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# ls
alias ls="ls -F"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# commands starting with % for pasting from web
alias %=' '

# du
alias duh="du -s * 2>/dev/null | sort -n | cut -f2 | xargs du -sh 2>/dev/null"

# ps
alias fps='ps -ef | grep'

# rvm
alias rvmall='rvm list known'
alias rvmup='rvm update --head'
alias r18='rvm ruby-1.8.7-p174'
alias r19='rvm ruby-1.9.2-head'
alias gemsets='rvm gemset list'
alias global='rvm gemset use global'

# homebrew
alias brewup='brew update'

# firefox
alias ff='firefox 3.6 3.6'      # my default profile
alias ffp='firefox 3.6 prompt'  # prompt for profile manager
alias fftor='firefox 3.6 tor'

# mysql
alias mysqlstart='/usr/local/share/mysql/mysql.server start'

# rails
alias sc='$(git top)script/console'
alias ss='$(git top)script/server'
alias sg='$(git top)script/generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias scaffold='$(git top)script/generate scaffold'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch $(git top)tmp/restart.txt'
